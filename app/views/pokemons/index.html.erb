<h1>Pokemons</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Id</th>
      <th>Name</th>
      <th>Main Technique</th>
      <th>Countries</th>
      <th>Types</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><img src="<%= pokemon.image %>" width="80px" height="80px" style="margin-top: -40px"></td>
        <td><%= pokemon.id %></td>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.main_technique %></td>
        <td><%= pokemon.countries %></td>
        <td><%= pokemon.types %></td>
        <td><%= pokemon.description %></td>
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pokemon', new_pokemon_path %>
<%= link_to 'My Catches', catches_path %>
